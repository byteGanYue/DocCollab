// Prisma schema 配置文件
// 详细文档: https://pris.ly/d/prisma-schema

// 生成 Prisma Client 的配置
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma" // 指定生成的客户端代码输出目录
}

// 数据库连接配置
datasource db {
  provider = "mongodb" // 使用 MongoDB 数据库
  url      = env("DATABASE_URL") // 从环境变量获取数据库连接 URL
}
