{
  "name": "doccollab",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "commit": "git add . && git-cz",
    "dev:doc-web": "pnpm --filter doc-web dev",
    "start:doc-server": "pnpm --filter doc-server start:dev",
    "docs:dev": "vitepress dev ./packages/doc-docs",
    "docs:build": "vitepress build ./packages/doc-docs",
    "docs:preview": "vitepress preview ./packages/doc-docs",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --quiet",
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "keywords": [
    "协同编辑",
    "富文本知识库",
    "文档管理系统"
  ],
  "author": "ByteGanYue",
  "license": "MIT",
  "packageManager": "pnpm@10.4.1",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.21.0",
    "@types/node": "^22.10.7",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.1",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "slate": "^0.117.0",
    "slate-react": "^0.117.1",
    "typescript-eslint": "^8.24.1",
    "vitepress": "^1.6.3"
  },
  "pnpm": {
    "overrides": {
      "doc-editor": "link:..\\..\\..\\AppData\\Local\\pnpm\\global\\5\\node_modules\\doc-editor"
    }
  },
  "dependencies": {
    "doc-editor": "link:..\\..\\..\\AppData\\Local\\pnpm\\global\\5\\node_modules\\doc-editor"
  }
